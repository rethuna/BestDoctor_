<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="6dp"
    android:paddingRight="2dp"
    android:paddingLeft="4dp"


    android:weightSum="1">
    <FrameLayout
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <Button
            android:background="@color/colorPrimary"
            android:textColor="@color/colorwhite"
            android:textSize="22dp"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="12"
            android:id="@+id/grid_bookdate"
            android:layout_gravity="center_horizontal|top" />
        <Button
            android:visibility="gone"
            android:textSize="10dp"
            android:background="@android:color/transparent"
            android:textColor="@color/colorwhite"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:text="saturday"
            android:layout_marginTop="5dp"
            android:id="@+id/grid_bookweek"
            android:layout_gravity="right" />

        <Button
            android:textSize="10dp"

            android:background="@android:color/transparent"
            android:textColor="@color/colorwhite"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:text="Dec"
            android:layout_marginTop="40dp"
            android:id="@+id/grid_bookmonth"
            android:layout_gravity="right" />
    </FrameLayout>
    <LinearLayout
        android:paddingBottom="5dp"
        android:background="@color/colorwhite"
        android:orientation="vertical"
        android:layout_width="70dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/colorwhite"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"

            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingRight="2dp"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking"
                android:id="@+id/grid_book_textview"
                />
            <TextView
                android:textSize="10dp"
                android:paddingLeft="7dp"
                android:text="23"
                android:id="@+id/grid_totalbooking_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:background="@color/colorwhite"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"

            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingRight="2dp"
                android:textSize="10dp"

                android:paddingTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free Slot"
                android:id="@+id/grid_freeslot_textview"

                android:gravity="left" />
            <TextView
                android:textSize="10dp"
                android:paddingLeft="4dp"
                android:text="23"
                android:id="@+id/grid_freeslot_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
