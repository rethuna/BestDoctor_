<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_image" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="35dp"
                    android:background="@drawable/boarder_bottom_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:paddingLeft="4dp"
                        android:background="@android:color/transparent"
                        android:hint="Name"
                        android:textSize="@dimen/patient_input"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:inputType="text"
                        android:id="@+id/edittext_patientname"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/boarder_bottom_line"
                android:paddingTop="6dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingLeft="4dp"
                    android:text="+91"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="@dimen/patient_input"
                    android:layout_marginLeft="35dp"
                    android:inputType="text"
                    android:id="@+id/edittext_patientphnocountry"
                    android:layout_width="50dp"
                    android:background="@drawable/boarder_right_line"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />
                <EditText
                    android:paddingLeft="4dp"
                    android:hint="Mobile Number"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="@dimen/patient_input"
                    android:layout_marginLeft="15dp"
                    android:inputType="number"
                    android:id="@+id/edittext_patientphno"
                    android:layout_width="match_parent"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:paddingTop="6dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="35dp"
                    android:background="@drawable/boarder_bottom_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="4dp"
                        android:background="@android:color/transparent"
                        android:hint="E-mail "
                        android:textSize="@dimen/patient_input"
                        android:inputType="textEmailAddress"
                        android:id="@+id/edittext_patientemail"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:paddingTop="6dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:paddingTop="2dp"
                    android:paddingBottom="14dp"
                    android:layout_marginLeft="35dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/boarder_bottom_line"
                    android:layout_height="wrap_content" >
                    <RadioGroup
                        android:paddingTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioGroup">
                        <RadioButton
                            android:paddingLeft="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Male"
                            android:checked="true"
                            android:id="@+id/radioButtonMale" />
                        <RadioButton
                            android:checked="false"
                            android:layout_marginLeft="74dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Female"
                            android:id="@+id/radioButtonFemale"
                            />

                    </RadioGroup>


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:paddingTop="6dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="35dp"
                    android:background="@drawable/boarder_bottom_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="4dp"
                        android:background="@android:color/transparent"
                        android:hint="Age"
                        android:textSize="@dimen/patient_input"
                        android:inputType="number"
                        android:maxLength="3"
                        android:id="@+id/edittext_patienage"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>