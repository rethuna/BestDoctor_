<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical" android:layout_height="match_parent">

    <LinearLayout

        android:id="@+id/patdocname"
        android:paddingBottom="4dp"
        android:background="@drawable/boarder_bottom_line"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="2dp"
            android:background="@drawable/personn"
            android:layout_marginLeft="10dp"
            android:layout_width="34dp"
            android:layout_height="34dp" />

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/doctornametxt"
                android:paddingTop="10dp"
                android:hint="Doctor Name"
                android:editable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingBottom="4dp"
        android:id="@+id/ppat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="8dp"
            android:background="@drawable/locationn"
            android:layout_marginLeft="10dp"
            android:layout_width="34dp"
            android:layout_height="34dp" />

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/clinicname"
                android:hint="Clinic Name"
                android:editable="false"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/locationtxtview"
                android:hint="Location"
                android:editable="false"
                android:layout_marginTop="5dp"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
