<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/layout_bg"
        android:layout_marginTop="@dimen/margin_above"
        android:orientation="vertical"
        android:paddingBottom="2dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:paddingLeft="-2dp"
        android:paddingTop="15dp"
        android:hint="Booking status"
        android:id="@+id/bookingtext"
        android:textSize="16dp"
        android:background="@drawable/boarder_bottom_line"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_width="fill_parent"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:layout_marginRight="8dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorMain"
        />

    <LinearLayout
        android:paddingTop="14dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
          android:layout_weight="0.3"
            android:id="@+id/firstday"
            android:background="@drawable/round_button"

            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="15dp"
            android:layout_height="60dp" />
        <Button
            android:layout_weight="0.3"
            android:id="@+id/secondday"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="@dimen/circle_spacing"
            android:background="@drawable/round_button"
            android:textSize="18dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_width="15dp"
            android:layout_height="60dp" />
        <Button
            android:layout_weight="0.3"
            android:id="@+id/thirdday"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginLeft="@dimen/circle_spacing"
            android:background="@drawable/round_button"
            android:layout_marginRight="5dp"
            android:layout_width="15dp"
            android:layout_height="60dp" />
        <Button
            android:layout_weight="0.3"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="@dimen/circle_spacing"
            android:id="@+id/fourthday"
            android:textColor="@android:color/white"
            android:background="@drawable/round_button"
            android:layout_width="15dp"
            android:layout_height="60dp"  />

    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/date_text"
            android:paddingLeft="18dp"
            android:layout_weight="1"
        android:text="ghhj"
            android:paddingTop="4dp"
            android:id="@+id/booking_date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="20dp"
            android:paddingTop="4dp"
            android:text="nhjh"
            android:textSize="@dimen/date_text"
            android:layout_marginLeft="@dimen/circle_spacing"
            android:layout_weight="1"
            android:id="@+id/booking_date2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="20dp"
            android:textSize="@dimen/date_text"           android:layout_marginLeft="@dimen/circle_spacing"
            android:layout_weight="1"
            android:id="@+id/booking_date3"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="20dp"
            android:textSize="@dimen/date_text"
            android:layout_marginLeft="@dimen/circle_spacing"
            android:layout_weight="1"

            android:id="@+id/booking_date4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/date_text"
            android:paddingLeft="19dp"
            android:layout_weight="1"
            android:paddingTop="4dp"
            android:id="@+id/booking_year1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="21dp"

            android:paddingTop="4dp"
            android:textSize="@dimen/date_text"
            android:layout_marginLeft="@dimen/circle_spacing"
            android:layout_weight="1"
            android:id="@+id/booking_year2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="20dp"
            android:textSize="@dimen/date_text"

            android:layout_marginLeft="@dimen/circle_spacing"
            android:layout_weight="1"
            android:id="@+id/booking_year3"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="20dp"
            android:textSize="@dimen/date_text"
            android:layout_marginLeft="@dimen/circle_spacing"
            android:layout_weight="1"

            android:id="@+id/booking_year4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="-2dp"
            android:id="@+id/freeslot"
            android:textSize="12dp"
            android:layout_marginLeft="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free Slots"
            />
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingTop="-31dp"
        android:layout_height="wrap_content">

        <Button
            android:textSize="10dp"
            android:text="20"
            android:layout_weight="0.8"
            android:id="@+id/firstdaytotalbooking"
            android:background="@android:color/transparent"
            android:layout_width="49dp"
            android:layout_height="15dp" />
        <Button
            android:layout_weight="1"
            android:textSize="10dp"
            android:id="@+id/seconddaytotalbooking"
            android:layout_marginLeft="@dimen/circle_spacing"
            android:background="@android:color/transparent"
            android:layout_width="49dp"
            android:layout_height="15dp"  />
        <Button
            android:layout_weight="1"
            android:textSize="10dp"

            android:id="@+id/thirddaytotalbooking"
            android:layout_marginLeft="@dimen/circle_spacing"
            android:background="@android:color/transparent"
            android:layout_width="49dp"
            android:layout_height="15dp"  />
        <Button
            android:layout_weight="1"
            android:textSize="10dp"

            android:layout_marginLeft="@dimen/circle_spacing"
            android:id="@+id/fourthdaytotalbooking"
            android:background="@android:color/transparent"
            android:layout_width="49dp"
            android:layout_height="15dp" />

    </LinearLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="5dp">
        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textview"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:paddingBottom="1dp"
            android:layout_alignParentLeft="true"
            android:text="Tap the circle for more details.. "
            />
        <Button
            android:textSize="10dp"
             android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:drawablePadding="4dp"
            android:gravity="center"
             android:textColor="#1E90FF"
            android:id="@+id/button_moredays"
            android:text="    More Days "
            android:background="@drawable/boarder_rect"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="29dp"

            />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>


