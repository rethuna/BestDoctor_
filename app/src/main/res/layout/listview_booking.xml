                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/booking_slot_text"
                android:textSize="12dp"
                android:text="1"
                android:layout_width="wrap_content"
